uniform sampler3D Voxels;
uniform sampler3D aTex;

//-----------------------------------------------------------------------------
//Shadows----------------------------------------------------------------------
//-----------------------------------------------------------------------------
float shadowFetch(vec3 pos, float lod)
{
	return textureLod(aTex, pos, lod).w;
}
//-----------------------------------------------------------------------------
//Voxels-----------------------------------------------------------------------
//-----------------------------------------------------------------------------
vec4 voxelFetch(vec3 pos, float lod, vec4 dir)
{
	vec4 alpha = textureLod(aTex, pos, lod);
	return vec4(textureLod(Voxels, pos, lod).xyz,alpha.w);
}

